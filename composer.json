{
    "name": "deseretdigital/smartystreets-php-sdk",
    "description": "API client for SmartyStreets service",
    "require": {
        "deseretdigital/framework": "dev-composerize"
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/php-invoker": "*",
        "phpunit/phpunit-story": "*",

        "mockery/mockery": "dev-master@dev",

        "raveren/kint": "dev-1.0.0-wip"
    },

    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:deseretdigital/framework.git"
        }
    ],

    "autoload": {
        "classmap": [
            "src"
        ],
        "psr-4": {
            "DDM\\Api\\SmartyStreets\\": "src/"
        }
    },

    "include-path": ["vendor/deseretdigital/framework/zend/library/"]

}
