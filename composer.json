{
    "name": "deseretdigital/smartystreets-php-sdk",
    "description": "API client for SmartyStreets service",
    "require": {
        "zendframework/zend-config": "2.0.*",
        "zendframework/zend-http": "2.0.*"
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/php-invoker": "*",
        "phpunit/phpunit-story": "*",

        "mockery/mockery": "dev-master@dev",

        "raveren/kint": "dev-1.0.0-wip"
    },

    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.zendframework.com/"
        }
    ],

    "autoload": {
        "psr-4": {
            "DDM\\SmartyStreets\\": "src/"
        }
    }

}
